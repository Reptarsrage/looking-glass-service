{
  "name": "looking-glass-service",
  "productName": "The Looking-Glass Service",
  "version": "1.0.0",
  "description": "This service serves up content from across the web.",
  "license": "Unlicense",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reptarsrage/looking-glass-service.git"
  },
  "author": {
    "name": "Reptarsrage",
    "email": "reptarsrage@gmail.com",
    "url": "https://github.com/reptarsrage"
  },
  "bugs": {
    "url": "https://github.com/reptarsrage/looking-glass-service/issues"
  },
  "keywords": [
    "fastify",
    "typescript"
  ],
  "homepage": "https://github.com/reptarsrage/looking-glass-service#readme",
  "scripts": {
    "format": "prettier --write src",
    "check": "tsc --noEmit --pretty",
    "lint": "eslint src",
    "build": "tsc --project  .",
    "start": "node ./dist/server.js",
    "dev": "ts-node --esm ./src/server.ts",
    "test": "jest",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/env": "^4.2.0",
    "@fastify/static": "^6.6.0",
    "ajv": "^8.12.0",
    "axios": "^1.3.4",
    "axios-rate-limit": "^1.3.0",
    "axios-retry": "^3.4.0",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^16.0.3",
    "fastify": "^4.14.0",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "fluent-json-schema": "^4.1.0",
    "image-size": "^1.0.2",
    "js-sha256": "^0.9.0",
    "jspack": "^0.0.4",
    "nanoid": "^3.3.4",
    "pino": "^8.11.0",
    "tiny-invariant": "^1.3.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/ffprobe": "^1.1.3",
    "@types/ffprobe-static": "^2.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.3",
    "nano-staged": "^0.8.0",
    "pino-pretty": "^9.4.0",
    "prettier": "^2.8.2",
    "simple-git-hooks": "^2.8.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx tsc --noEmit --pretty && npx nano-staged"
  },
  "nano-staged": {
    "src/**/*.ts": "eslint --fix",
    "src/**": "prettier --write"
  },
  "tap": {
    "coverage": false,
    "node-arg": [
      "--no-warnings",
      "--loader",
      "ts-node/esm"
    ],
    "ts": false
  }
}
