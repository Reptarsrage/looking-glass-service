{
  "name": "looking-glass-service",
  "productName": "The Looking-Glass Service",
  "version": "1.0.0",
  "description": "This service serves up content from across the web.",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reptarsrage/looking-glass-service.git"
  },
  "author": {
    "name": "Reptarsrage",
    "email": "reptarsrage@gmail.com",
    "url": "https://github.com/reptarsrage"
  },
  "bugs": {
    "url": "https://github.com/reptarsrage/looking-glass-service/issues"
  },
  "keywords": [
    "fastify",
    "typescript"
  ],
  "homepage": "https://github.com/reptarsrage/looking-glass-service#readme",
  "scripts": {
    "format": "prettier --write src",
    "lint": "tsc --noEmit --pretty && eslint --ext .js,.ts src",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc -p tsconfig.json --watch\" \"nodemon -q dist/server.js\"",
    "test": "tap --ts",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@fastify/caching": "^7.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/env": "^3.0.0",
    "@fastify/static": "^5.0.0",
    "ajv": "^8.11.0",
    "axios": "^0.27.2",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^16.0.0",
    "fastify": "^3.29.0",
    "fastify-plugin": "^3.0.1",
    "fluent-json-schema": "^3.1.0",
    "js-sha256": "^0.9.0",
    "jspack": "^0.0.4",
    "nanoid": "^3.3.3",
    "pino": "^7.11.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.30",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "nano-staged": "^0.8.0",
    "nodemon": "^2.0.16",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.7.0",
    "tap": "^16.2.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx tsc --noEmit --pretty && npx nano-staged"
  },
  "nano-staged": {
    "src/**/*.ts": "eslint --fix",
    "src/**": "prettier --write"
  }
}
