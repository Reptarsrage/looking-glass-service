{
  "name": "looking-glass-service",
  "productName": "The Looking-Glass Service",
  "version": "1.0.0",
  "description": "This service serves up content from across the web.",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reptarsrage/looking-glass-service.git"
  },
  "author": {
    "name": "Reptarsrage",
    "email": "reptarsrage@gmail.com",
    "url": "https://github.com/reptarsrage"
  },
  "bugs": {
    "url": "https://github.com/reptarsrage/looking-glass-service/issues"
  },
  "keywords": [
    "fastify",
    "typescript"
  ],
  "homepage": "https://github.com/reptarsrage/looking-glass-service#readme",
  "scripts": {
    "format": "prettier --write src",
    "lint": "tsc --noEmit --pretty && eslint --ext .js,.ts src",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc -p tsconfig.json --watch\" \"nodemon -q dist/server.js\"",
    "test": "tap --ts",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/env": "^4.2.0",
    "@fastify/static": "^6.6.0",
    "ajv": "^8.11.2",
    "axios": "^1.2.1",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "fastify-plugin": "^4.4.0",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "fluent-json-schema": "^4.0.0",
    "image-size": "^1.0.2",
    "js-sha256": "^0.9.0",
    "jspack": "^0.0.4",
    "nanoid": "^3.0.0",
    "pino": "^8.8.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@types/ffprobe": "^1.1.3",
    "@types/ffprobe-static": "^2.0.1",
    "@types/node": "^18.11.16",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "nano-staged": "^0.8.0",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.1",
    "simple-git-hooks": "^2.8.1",
    "tap": "^16.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx tsc --noEmit --pretty && npx nano-staged"
  },
  "nano-staged": {
    "src/**/*.ts": "eslint --fix",
    "src/**": "prettier --write"
  }
}
