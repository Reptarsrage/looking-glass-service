{
  "name": "looking-glass-service",
  "productName": "The Looking-Glass Service",
  "version": "1.0.0",
  "description": "This service serves up content from across the web.",
  "main": "index.js",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reptarsrage/looking-glass-service.git"
  },
  "author": {
    "name": "Reptarsrage",
    "email": "reptarsrage@gmail.com",
    "url": "https://github.com/reptarsrage"
  },
  "bugs": {
    "url": "https://github.com/reptarsrage/looking-glass-service/issues"
  },
  "keywords": [
    "fastify",
    "typescript"
  ],
  "homepage": "https://github.com/reptarsrage/looking-glass-service#readme",
  "scripts": {
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production node dist/index.js | ./node_modules/.bin/pino-colada",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts | ./node_modules/.bin/pino-colada",
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint --cache --format=pretty \"{src,test}/**/*.ts\""
  },
  "devDependencies": {
    "@types/glob": "7.1.3",
    "@types/got": "9.6.11",
    "@types/jest": "26.0.19",
    "@types/node": "14.14.12",
    "@types/pino": "6.3.5",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "cross-env": "7.0.3",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-formatter-pretty": "4.0.0",
    "eslint-plugin-prettier": "3.2.0",
    "husky": "4.3.5",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.7",
    "pino-colada": "2.1.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "camelize": "^1.0.0",
    "decamelize-keys": "^1.1.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.9.1",
    "fastify-compress": "^3.4.0",
    "fastify-cors": "^5.1.0",
    "fastify-helmet": "^5.0.3",
    "fastify-static": "^3.3.0",
    "glob": "^7.1.6",
    "got": "^11.8.1",
    "js-sha256": "^0.9.0",
    "jspack": "^0.0.4",
    "moment": "^2.29.1",
    "pino": "^6.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts|js}": [
      "eslint --cache --format=pretty",
      "prettier --write"
    ],
    "*.{md|json|yml}": [
      "prettier --write"
    ]
  },
  "devEngines": {
    "node": ">=15.x",
    "yarn": ">=1.x"
  }
}
