{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coveragePathIgnorePatterns": ["/node_modules/", "/__tests__/"],
  "testEnvironment": "node",
  "clearMocks": true,
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/$1"
  }
}
